mixin sidebarNavBtn(classMod, iconBool, iconName, btnName)
  a.sidebar__navigation-btn.uk-flex.uk-flex-middle(
    href="#"
    class="sidebar__navigation-btn--" + classMod
    title=""
  )
    div.uk-flex.uk-flex-center
      if(iconBool)
        span(uk-icon= iconName)
      else
        i.icon-font(class!= iconName)
    div
      p!= btnName
    if(classMod !== 'internal')
      div.uk-flex.uk-flex-middle.uk-flex-center

mixin sidebarNavAccordionBtn(classMod, iconBool, iconName, btnName)
  a.uk-accordion-title.sidebar__navigation-btn.uk-flex.uk-flex-middle(
    href="#"
    class="sidebar__navigation-btn--" + classMod
    title=""
  )
    div.uk-flex.uk-flex-center
      if(iconBool)
        span(uk-icon= iconName)
      else
        i.icon-font(class!= iconName)
    div
      p!= btnName
    div.uk-flex.uk-flex-middle.uk-flex-center
      span(uk-icon='chevron-down')


