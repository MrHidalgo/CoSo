// SECTION support table :: START

#d-support.d-support

  .uk-section.uk-padding-remove-top.uk-padding-remove-bottom.uk-margin-medium-bottom
    .uk-card.uk-card-default.uk-box-shadow-small
      .uk-card-header.uk-flex.uk-flex-middle.uk-flex-between
        h2.uk-margin-remove-bottom.uk-card-title.uk-text-bold!= "Support"

        .uk-width-1-2.uk-flex.uk-flex-right.uk-flex-middle
          a.uk-button.uk-button-link(href="#" class="" title="")
            span.uk-text-muted(uk-icon='minus')
          a.uk-button.uk-button-link.uk-margin-small-left(href="#" class="" title="")
            span.uk-text-muted(uk-icon='close')

      .uk-card-body.uk-padding-remove

        div.d-support__header.uk-flex.uk-flex-middle.uk-flex-between.uk-padding
          .uk-width-1-2
            h2.uk-margin-remove-bottom.uk-card-title.uk-text-bold.uk-text-muted!= "Recent Tickets"

          .uk-width-1-2.uk-flex.uk-flex-middle.uk-flex-right
            p.uk-margin-remove!= "<span class='uk-badge'>8</span> Open Tickets"

            button.uk-flex.uk-flex-middle.uk-flex-between.uk-margin-medium-left(class!= "uk-button uk-button-primary uk-button-large")
              span(uk-icon="plus")
              span.uk-text-capitalize!="New Ticket"

        div.d-support__body
          table.uk-margin-remove(class="uk-table uk-table-responsive uk-table-divider uk-table-hover uk-table-middle")
            thead
              tr
                th
                  a(href="#" class="" title="")
                    p.uk-text-capitalize.uk-margin-remove-bottom!= "Ticket ID"
                th
                  a(href="#" class="" title="")
                    p.uk-text-capitalize.uk-margin-remove-bottom!= "Status"
                th
                  a(href="#" class="" title="")
                    p.uk-text-capitalize.uk-margin-remove-bottom!= "Priority"
                th
                  a(href="#" class="" title="")
                    p.uk-text-capitalize.uk-margin-remove-bottom!= "Subject"
                th
                  a(href="#" class="" title="")
                    p.uk-text-capitalize.uk-margin-remove-bottom!= "Reporter"
                th
                  div.uk-flex.uk-flex-middle
                    p.uk-text-capitalize.uk-margin-remove-bottom!= "Date Updated"
                th
            tbody
              tr
                td
                  span!= '3950-D'
                td
                  div.uk-table__status.uk-table__status--new.uk-flex-inline.uk-flex-middle
                    span.uk-border-circle.uk-margin-small-right
                    p.uk-margin-remove!= "New"
                td
                  span.uk-table__priority.uk-table__priority--normal!= "Normal"
                td
                  span!= "Problem with System functionality"
                td
                  span(uk-tooltip="title: skelly@aaski.com; pos:top;")!= "Randah McKinnie"
                td
                  span!= "Nov 18, 2018"
                td
                  a(href="#" class="uk-icon-link" uk-icon="chevron-down")
              tr
                td
                  span!= '3950-D'
                td
                  div.uk-table__status.uk-table__status--hold.uk-flex-inline.uk-flex-middle
                    span.uk-border-circle.uk-margin-small-right
                    p.uk-margin-remove!= "On Hold"
                td
                  span.uk-table__priority.uk-table__priority--normal!= "Normal"
                td
                  span!= "Problem with System functionality"
                td
                  span(uk-tooltip="title: skelly@aaski.com; pos:top;")!= "Randah McKinnie"
                td
                  span!= "Nov 18, 2018"
                td
                  a(href="#" class="uk-icon-link" uk-icon="chevron-down")
              tr
                td
                  span!= '3950-D'
                td
                  div.uk-table__status.uk-table__status--critical.uk-flex-inline.uk-flex-middle
                    span.uk-border-circle.uk-margin-small-right
                    p.uk-margin-remove!= "Escalated"
                td
                  span.uk-table__priority.uk-table__priority--critical!= "Critical"
                td
                  span!= "Problem with System functionality"
                td
                  span(uk-tooltip="title: skelly@aaski.com; pos:top;")!= "Randah McKinnie"

                td
                  span!= "Nov 18, 2018"
                td
                  a(href="#" class="uk-icon-link" uk-icon="chevron-down")
              tr
                td
                  span!= '3950-D'
                td
                  div.uk-table__status.uk-table__status--progress.uk-flex-inline.uk-flex-middle
                    span.uk-border-circle.uk-margin-small-right
                    p.uk-margin-remove!= "In Progress"
                td
                  span.uk-table__priority.uk-table__priority--normal!= "Normal"
                td
                  span!= "Problem with System functionality"
                td
                  span(uk-tooltip="title: skelly@aaski.com; pos:top;")!= "Randah McKinnie"
                td
                  span!= "Nov 18, 2018"
                td
                  a(href="#" class="uk-icon-link" uk-icon="chevron-down")

        div.d-support__footer.uk-flex.uk-flex-middle.uk-flex-between
          .uk-width-1-2
            button.uk-flex.uk-flex-middle.uk-padding-remove(class="uk-button uk-button-default")
              span.uk-margin-small-right(uk-icon="file-text")
              p.uk-text-bold.uk-margin-remove!= "VIEW ALL TICKETS"
              span.uk-margin-small-left(uk-icon="chevron-right")
          .uk-width-1-2.uk-flex.uk-flex-right
            a(href="" class="uk-icon-link" uk-icon="question")

// SECTION support table :: END